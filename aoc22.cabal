data-files: inputs/*.txt

common lang
    default-extensions:  ImportQualifiedPost
                         OverloadedStrings
                         ViewPatterns
                         NamedFieldPuns
    ghc-options:         -Wall

common deps
    build-depends:     base >= 4.16.0,
                       bytestring,
                       attoparsec,
                       containers
    other-modules:     Paths_aoc22
    autogen-modules:   Paths_aoc22
   
common exe
    import:            lang, deps
    build-depends:     aoc22
    hs-source-dirs:    exe

common lib
    import:            lang, deps
    hs-source-dirs:    src

library
    import:            lib
    exposed-modules:   AOC.Utils

